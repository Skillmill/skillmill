<div class="jumbotron" id="main-carousel">
  <div class="container-fluid">
    <h1>Unique Selling Proposition</h1>
    <h3>A short but bold statement to catch the viewer's attention.</h3>
  </div>
</div>
<div class="container-fluid">
  <h1>Projects</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.title %></td>
          <td><%= project.description %></td>
          <td><%= project.price %></td>
          <td><%= link_to 'Show', project, class: "btn btn-link" %></td>
          <td><%= link_to 'Edit', edit_project_path(project), class: "btn btn-link" %></td>
          <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Project', new_project_path, class: "btn btn-link" %>
</div>
