<div class="container-fluid">
  <h1>Projects</h1>

  <div class="row">
    <% @projects.each do |project| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(project.image_url), project %>
          <div class="caption">
            <h3><%= project.title %></h3>
            <p><%= number_to_currency(project.price) %></p>
            <p><%= "posted by #{project.user.first_name.capitalize} #{project.user.last_name.capitalize[0]}." %></p>
            <p><%= project.description %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <br>

  <% if user_signed_in? %>
    <%= link_to 'New Project', new_project_path, class: "btn btn-link" %>
  <% end %>
</div>

