<div class="container-fluid">
  <h1>Projects</h1>

  <div class="row">
    <% @projects.each do |project| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= image_tag project.image_url %>
          <div class="caption">
            <h3><%= project.title %></h3>
            <p><%= project.price %></p>
            <p><%= project.description %></p>
            <%= link_to 'Show', project, class: "btn btn-link" %><br>
            <%= link_to 'Edit', edit_project_path(project), class: "btn btn-link" %><br>
            <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <br>

  <%= link_to 'New Project', new_project_path, class: "btn btn-link" %>
</div>

