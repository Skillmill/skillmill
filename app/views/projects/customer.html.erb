<div class="container-fluid">
  <h1>My Project History</h1>
  
  <table class="table table-striped table-bordered">
    <tr>
      <th class="center">Image</th>
      <th class="center">Name</th>
      <th class="center">Description</th>
      <th class="center">Price</th>
      <th class="center">Action</th>
    </tr>
    <% @projects.each do |project| %>
      <tr>
        <td style="vertical-align:middle"><%= link_to image_tag(project.image_url(:thumb)), project %></td>
        <td style="vertical-align:middle"><%= project.title %></td>
        <td style="vertical-align:middle"><%= project.description %></td>
        <td style="vertical-align:middle"><%= number_to_currency(project.price) %></td>
        <td style="vertical-align:middle">
          <%= link_to edit_project_path(project), class: "project-action" do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
          <%= link_to project, class: "project-action", method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>

  <br>

  <% if user_signed_in? %>
    <%= link_to 'New Project', new_project_path, class: "btn btn-link" %>
  <% end %>
</div>

