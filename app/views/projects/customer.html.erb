<div class="container-fluid">
  <h1>My Project History</h1>
  
  <table class="table table-striped table-bordered">
    <tr>
      <th class="center">Image</th>
      <th class="center">Name</th>
      <th class="center">Description</th>
      <th class="center">Price</th>
      <th class="center">Action</th>
    </tr>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to image_tag(project.image_url(:thumb)), project %></td>
        <td><%= project.title %></td>
        <td><%= project.description %></td>
        <td><%= number_to_currency(project.price) %></td>
        <td>
          <%= link_to 'Show', project, class: "btn btn-link" %>
          <%= link_to 'Edit', edit_project_path(project), class: "btn btn-link" %>
          <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
        </td>
      </tr>
    <% end %>
  </table>

  <br>

  <% if user_signed_in? %>
    <%= link_to 'New Project', new_project_path, class: "btn btn-link" %>
  <% end %>
</div>

