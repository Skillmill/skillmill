<div class="container-fluid">
  <h1>Show Project</h1>
  <div class="row">
    <div class="col-md-6">
      <div class="thumbnail">
        <%= image_tag @project.image_url %>
      </div>
    </div>
    <div class="col-md-6">
      <h3><%= @project.title %></h3>
      <p><%= @project.description %></p>
      <p><%= number_to_currency(@project.price) %></p>
    </div>
  </div>
  
  <%= link_to 'Edit', edit_project_path(@project), class: "btn btn-link" %> |
  <%= link_to 'Back', projects_path, class: "btn btn-link" %>
  
</div>
