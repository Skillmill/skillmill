<div class="container-fluid">
  <h1>Listing Designs</h1>

  <table>
    <thead>
      <tr>
        <th>Description</th>
        <th>Image</th>
        <th>thirdpartycontent</th>
        <th>Project</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @designs.each do |design| %>
        <tr>
          <td><%= design.description %></td>
          <td><%= design.image %></td>
          <td><%= design.thirdpartycontent %></td>
          <td><%= design.project_id %></td>
          <td><%= link_to 'Show', project_design(design) %></td>
          <td><%= link_to 'Edit', edit_design_path(design) %></td>
          <td><%= link_to 'Destroy', project_design, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Design', new_project_design_path %>
  
</div>
