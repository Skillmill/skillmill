<div class="container-fluid">
  <h1>Show Design</h1>
  <div class="row">
    <div class="col-md-6">
      <div class="thumbnail">
        <%= image_tag @design.image_url %>
      </div>
    </div>
    <div class="col-md-6">
      <h4><%= @design.project.title %></h4>
      <p><%= @design.description %></p>
      <p>Date Submitted: <%= @design.created_at.strftime("%F - %T") %></p>
      <p>Designed by: <%= @design.designer.name %></p>
      <p>Feedback received: </p>
      <p>Project Status: </p>
      <%= link_to 'Rate', new_design_review_path(@design), class: "btn btn-primary btn-xs" %>
      <%= link_to 'Contact', '#', class: "btn btn-primary btn-xs" %>
      <%= link_to 'Block', '#', class: "btn btn-danger btn-xs" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <% if @reviews.blank? %>
        <h4>No reviews yet</h4>
      <% else %>
        <% @reviews.each do |review| %>
          <div class="star-rating" data-score= <%= review.rating %> ></div>
          <p><%= review.comment %></p>
        <% end %>
      <% end %>
    </div>
  </div>

  <% if current_user == @design.designer %>
    <%= link_to 'Edit', edit_design_path(@design), class: "btn btn-link" %> |
  <% end %>

  <%= link_to 'Browse Projects', projects_path, class: "btn btn-link" %>
  
</div>

<script>
  $('.star-rating').raty({
    path: 'https://s3.eu-central-1.amazonaws.com/skillmill/stars',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>