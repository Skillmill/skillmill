  <%= form_for([@project, @design], :html => { multipart: true }) do |f| %>
    <% if @design.errors.any? %>
      <div id="error_explanation" class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <h4><%= pluralize(@design.errors.count, "error") %> prohibited this design from being saved:</h4>

        <ul>
        <% @design.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :image %>
      <%= f.file_field :image, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :thirdpartycontent, "Stock Photography/Clipart" %>
      <p class="help-block">Please check the box if you have included stock photos or clipart in your design. Read our stock image policy</p>
      <%= f.check_box :thirdpartycontent, class: "form-control checkbox" %>
    </div>

    <div class="form-group">
      <%= f.submit "Upload Design", class: "btn btn-success" %>
    </div>
  <% end %>
  
