<div class="jumbotron" id="portfolio">
  <div class="container-fluid">
    <div class="row section-header center">
      <div>
        <span class="fa fa-clipboard"></span>
        <h3>Recent Projects</h3>
      </div>
    </div>
    <div class="row">
      <% @projects.each do |project| %>
        <div class="col-md-3">
          <div class="thumbnail">
            <img src="<%= project.image %>" alt="placeholder 1">
            <div class="caption">
              <h3><%= project.title %></h3>
              <p><%= "posted by #{project.user.first_name.capitalize} #{project.user.last_name.capitalize[0]}." %></p>
              <p>Date Submitted: <%= project.created_at.strftime("%-m/%-d/%-y") %></p>
              <p><%= number_to_currency(project.price) %></p>
              <p><%= project.description %></p>
              <p>
                <a href="#" class="btn btn-profile" role="button"><i class="fa fa-eye"></i> Detail</a> 
                <a href="#" class="btn btn-message" role="button"><i class="fa fa-bookmark"></i> Watch</a>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="row section-btn center">
      <%= button_to "See All", projects_path, method: "get", class: "btn btn-warning" %>
    </div>
  </div>
</div>