<!-- Main Search Window -->
<div class="jumbotron" id="main-header">
  <div class="container-fluid">

    <div class="center" id="main-search-field">
      <h1>Find Projects and Creatives</h1>
      <form class="navbar-form" role="search">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search">
          <div class="input-group-btn">
              <button class="btn btn-warning" type="submit"><span class="glyphicon glyphicon-search"></span></button>
          </div>
        </div>
      </form>
    </div>
    
    <div class="row center section-btn" id="how-it-works-btn">
      <button class="btn btn-warning" type="submit">How it works</button>
    </div>
  </div>
</div>

<%= render 'layouts/categories' %>

<!-- Featured Projects -->
<div class="jumbotron" id="portfolio">
  <div class="container-fluid">
    <div class="row section-header center">
      <div>
        <span class="glyphicon glyphicon-list-alt"></span>
        <h3>Our Projects</h3>
      </div>
    </div>
    <div class="row center section-btn" id="see-all-btn">
      <%= link_to "See All", projects_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

<%= render 'layouts/carousel' %>

<!-- Featured Designers -->
<div class="jumbotron" id="designers">
  <div class="container-fluid">
    <div class="row section-header center">
      <div>
        <span class="glyphicon glyphicon-list-alt"></span>
        <h3>Our Designers</h3>
      </div>
    </div>
    <div class="row center section-btn" id="see-all-btn">
      <%= link_to "See All", projects_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

<%= render 'layouts/benefits' %>


